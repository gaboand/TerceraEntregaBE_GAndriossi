      <input class="fields" type="text" id="first_name" name="first_name" required />
    </div>
    <div class="form-group">

      <label for="last_name">Apellido:</label>
      <input class="fields" type="text" id="last_name" name="last_name" required />
    </div>
    <div class="form-group">

      <label for="age">Edad:</label>
      <input class="fields" type="number" id="age" name="age" required />
    </div>
    <div class="form-group">

      <label for="email">Email:</label>
      <input class="fields" type="email" id="email" name="email" required />
    </div>
    <div class="form-group">

      <label for="password">Contrase√±a:</label>
      <input class="fields" type="password" id="password" name="password" required />

    </div>
